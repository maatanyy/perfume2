    "performance": {
        "_comment": "4GB RAM, 2 vCPU 환경 최적화 설정",
        "max_concurrent_http_requests": 10,
        "max_concurrent_browser_requests": 2,
        "batch_size": 10,
        "batch_delay_seconds": 0.5,
        "browser_recycle_after_requests": 30,
        "browser_max_age_seconds": 300,
